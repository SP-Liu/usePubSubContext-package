{
  "compilerOptions": {
    "types": [
      "@types/jest",
      "@types/node",
      "@testing-library/jest-dom"
    ],
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "target": "ES2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
  ]
}